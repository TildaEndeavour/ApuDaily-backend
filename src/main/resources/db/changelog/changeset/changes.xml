<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="users_init" author="TildaEndeavour" context="dev">
        <comment>Create roles and users tables</comment>

        <createTable tableName="roles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_role_id" references="roles(id)"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>

        <sqlFile path="sql/roles_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>
    </changeSet>

    <changeSet id="media_init" author="TildaEndeavour" context="dev">
        <comment>Create attachable images for posts</comment>

        <createTable tableName="media_statuses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="media">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="post_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="status_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_status_id" references="media_statuses(id)"/>
            </column>
            <column name="filename" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="extension" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="url" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sqlFile path="sql/media_statuses_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>
    </changeSet>

    <changeSet id="posts_init" author="TildaEndeavour" context="dev">
        <comment>Create basics in-app publications</comment>

        <createTable tableName="posts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
            <column name="thumbnail_media_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_media_id" references="media(id)"/>
            </column>
            <column name="title" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="content" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="category_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="view_count" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="category_init" author="TildaEndeavour">
        <comment>Create initial categories list</comment>

        <createTable tableName="categories">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="slug" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <sqlFile path="sql/categories_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>
    </changeSet>

    <changeSet id="tags_init" author="TildaEndeavour">
        <createTable tableName="tags">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="posts_tags_init" author="TildaEndeavour">
        <createTable tableName="posts_tags">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="post_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="refresh_token_init" author="TildaEndeavour">
        <createTable tableName="refresh_token">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="token" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="expiry_date" type="timestamp with time zone">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="posts_commentaries_init" author="TildaEndeavour">
        <createTable tableName="posts_commentaries">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="post_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_post_id" references="posts(id)"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
            <column name="parent_comment_id" type="bigint">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="content" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="posts_commentaries"
                baseColumnNames="parent_comment_id"
                referencedTableName="posts_commentaries"
                referencedColumnNames="id"
                constraintName="fk_parent_comment_id"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="timezones_and_user_profiles_init" author="TildaEndeavour">

        <createTable tableName="timezones">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="gmt" type="varchar">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>

        <sqlFile path="sql/timezones_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>

        <createTable tableName="profiles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
            <column name="timezone_id" type="bigint">
                <constraints nullable="false" unique="false" foreignKeyName="fk_timezone_id" references="timezones(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="reactions_init" author="TildaEndeavour">

        <createTable tableName="target_types">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <sqlFile path="sql/target_types_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>

        <createTable tableName="reaction_types">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <sqlFile path="sql/reaction_types_init.sql" relativeToChangelogFile="true" endDelimiter=";" splitStatements="true"/>

        <createTable tableName="reactions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="target_type_id" type="bigint">
                <constraints nullable="false" unique="false" foreignKeyName="fk_entity_type_id" references="target_types(id)"/>
            </column>
            <column name="entity_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="reaction_type_id" type="bigint">
                <constraints nullable="false" unique="false" foreignKeyName="fk_reaction_type_id" references="reaction_types(id)"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>